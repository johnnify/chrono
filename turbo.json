{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [
				".next/**",
				"!.next/cache/**",
				".svelte-kit/**",
				".vercel/**"
			],
			"env": [
				"MSW_ENABLED",
				"DB_URL",
				"DB_AUTH_TOKEN",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {},
		"test:e2e": {},
		"test:unit": {},
		"stop": {},
		"first-time": {}
	}
}
