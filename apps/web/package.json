		"@types/dom-speech-recognition": "^0.0.7",
		"@types/node": "^24.10.0",
		"bits-ui": "^2.14.2",
		"clsx": "^2.1.1",
		"dotenv-flow": "^4.1.0",
		"drizzle-kit": "^0.31.6",
		"mode-watcher": "^1.1.0",
